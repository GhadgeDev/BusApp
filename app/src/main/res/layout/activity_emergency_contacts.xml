<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.example.rushikesh.busapp.EmergencyContacts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/hospitals"
        android:textColor="#000"
        android:textSize="27sp"
        android:onClick="onClickHospital"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:text="Ambulance"
        android:textColor="#000"
        android:textSize="27sp"
        android:padding="10dp"
        android:onClick="onClickAmbulance"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:text="Blood Bank"
        android:textColor="#000"
        android:textSize="27sp"
        android:padding="10dp"
        android:onClick="onClickBloodbank"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:text="@string/fire_brigade"
        android:textColor="#000"
        android:textSize="27sp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:text="Crane Services"
        android:textColor="#000"
        android:textSize="27sp"
        android:padding="10dp"
        android:onClick="onClickCrane"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:text="Tourist Enquiry"
        android:textColor="#000"
        android:textSize="27sp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Highlight"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Child Helpline"
        android:textColor="#000"
        android:textSize="27sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/Highlight"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Electricity"
            android:textColor="#000"
            android:textSize="27sp" />

    </LinearLayout>
</ScrollView>
